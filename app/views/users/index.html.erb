<%= search_form_for @q do |f| %>
  <%= f.label :name, "名前を入力" %>
  <%= f.search_field :name_cont %>

  <%= f.label :age, "年齢を選択" %>
  <%= f.number_field :age_gteq %>歳〜
  <%= f.number_field :age_lt %>歳

  <%= f.submit "検索" %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
