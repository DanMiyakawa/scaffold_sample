<%= search_form_for @q do |f| %>
  <%= f.label :task, "Taskを入力" %>
  <%= f.search_field :task_cont %>

  <%= f.label :content, "内容を入力" %>
  <%= f.search_field :content_cont %>

  <%= f.label :start_time, "日付を選択" %>
  <%= f.date_field :start_time_cont %>

  <%= f.submit "検索" %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= month_calendar events: @books do |date, books| %>
　<%= date.day %>

　<% books.each do |book| %>
    <div>
      <%= book.task %>
    </div>
  <% end %>

<% end %>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :task, "タスク") %></th>
    <th><%= sort_link(@q, :content, "内容") %></th>
    <th><%= sort_link(@q, :start_time, "日時") %></th>
    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.task %></td>
        <td><%= book.content %></td>
        <td><%= book.start_time %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
<%= link_to 'User Index', users_path %>